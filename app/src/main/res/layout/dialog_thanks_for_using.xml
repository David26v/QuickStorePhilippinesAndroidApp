<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/dialog_thanks_for_using.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/premium_admin_dialog_background"
    android:padding="24dp">

    <!-- Happy Icon -->
    <androidx.cardview.widget.CardView
        android:id="@+id/icon_container"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:cardCornerRadius="45dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/premium_success"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp">

        <ImageView
            android:id="@+id/happy_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_sentiment_satisfied"
            android:tint="#FFFFFF"
            android:contentDescription="Thank You" />

    </androidx.cardview.widget.CardView>

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thank You!"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/premium_text_primary"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp" />

    <!-- Message -->
    <TextView
        android:id="@+id/thanks_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We hope you had a great experience.\nYour locker session has ended safely."
        android:textSize="16sp"
        android:textColor="@color/premium_text_secondary"
        android:lineSpacingExtra="4dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Duration Info -->
    <TextView
        android:id="@+id/duration_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Session Duration: 2h 15m"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/premium_primary"
        android:background="@drawable/rounded_text_background"
        android:padding="12dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:layout_gravity="center" />

    <!-- OK Button -->
    <androidx.cardview.widget.CardView
        android:id="@+id/btn_thanks_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="24dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@color/premium_primary"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See You Again! ðŸ‘‹"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:paddingHorizontal="32dp"
            android:paddingVertical="12dp" />

    </androidx.cardview.widget.CardView>

</LinearLayout>