<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="QR Code Scanner"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Instruction Text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Position the QR code within the scanner frame"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <!-- Camera Preview Container -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginBottom="20dp"
        android:background="#000000"
        android:layout_gravity="center">

        <!-- Placeholder for Camera Preview -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#1a1a1a" />

        <!-- QR Code Scanner Frame -->
        <FrameLayout
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_gravity="center">

            <!-- Corner borders for scanning frame -->
            <!-- Top Left Corner -->
            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="start|top"
                android:background="@drawable/qr_corner_top_left" />

            <!-- Top Right Corner -->
            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="end|top"
                android:background="@drawable/qr_corner_top_right" />

            <!-- Bottom Left Corner -->
            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="start|bottom"
                android:background="@drawable/qr_corner_bottom_left" />

            <!-- Bottom Right Corner -->
            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="end|bottom"
                android:background="@drawable/qr_corner_bottom_right" />

            <!-- Scanning line animation placeholder -->
            <View
                android:id="@+id/scanning_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:background="@drawable/scanning_line"
                android:alpha="0.8" />

        </FrameLayout>

        <!-- Status Text Overlay -->
        <TextView
            android:id="@+id/qr_scanning_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="20dp"
            android:text="Align QR code within the frame"
            android:textColor="@android:color/white"
            android:background="#80000000"
            android:padding="12dp"
            android:textSize="14sp"
            android:gravity="center" />

    </FrameLayout>

    <!-- Scanner Status -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <View
            android:id="@+id/qr_status_indicator"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/status_indicator_detecting" />

        <TextView
            android:id="@+id/qr_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scanning for QR code..."
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />

    </LinearLayout>

    <!-- Instructions -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="• Hold your device steady\n• Ensure good lighting\n• Keep QR code flat and unobstructed"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="20dp"
        android:lineSpacingExtra="2dp" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/button_toggle_flash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flash"
            android:background="@android:color/transparent"
            android:textColor="@android:color/darker_gray"
            android:layout_marginEnd="16dp"
            style="?android:attr/borderlessButtonStyle" />

        <Button
            android:id="@+id/button_cancel_qr_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:background="@android:color/transparent"
            android:textColor="@android:color/darker_gray"
            android:layout_marginEnd="16dp"
            style="?android:attr/borderlessButtonStyle" />

        <Button
            android:id="@+id/button_manual_entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manual Entry"
            android:background="@drawable/dialog_button_primary"
            android:textColor="@android:color/white" />

    </LinearLayout>

</LinearLayout>