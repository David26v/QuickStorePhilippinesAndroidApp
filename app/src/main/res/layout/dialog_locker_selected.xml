<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/dialog_background">

    <!-- Locker Info Section -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="12dp"
        app:strokeColor="@color/primary_color"
        app:strokeWidth="1dp">

        <TextView
            android:id="@+id/dialog_locker_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="Locker Info"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primary_dark" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Access Method Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Access Method:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="12dp"
        android:gravity="center"/>

    <!-- Access Method Buttons (Vertical) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_access_code"
            style="@style/Widget.Material3.Button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/success_green"
            android:text="Enter Access Code"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_lock_open"
            app:iconGravity="textStart"
            app:iconPadding="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_qr_code"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="8dp"
            android:text="Scan QR Code"
            android:textColor="@color/primary_color"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_qr_code"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:strokeColor="@color/primary_color"
            app:strokeWidth="2dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_face_recognition"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="8dp"
            android:text="Face Recognition"
            android:textColor="@color/primary_color"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_face"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:strokeColor="@color/primary_color"
            app:strokeWidth="2dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_fingerprint"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Palm Scanner"
            android:textColor="@color/primary_color"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_fingerprint"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:strokeColor="@color/primary_color"
            app:strokeWidth="2dp" />
    </LinearLayout>

</LinearLayout>