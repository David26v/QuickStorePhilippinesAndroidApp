<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/dialog_session_continued.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/premium_admin_dialog_background"
    android:padding="24dp">

    <!-- Clock Icon -->
    <androidx.cardview.widget.CardView
        android:id="@+id/clock_container"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:cardCornerRadius="45dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/premium_warning_background"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp">

        <ImageView
            android:id="@+id/resume_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_access_time"
            android:tint="@color/premium_warning_text"
            android:contentDescription="Session Continued" />

    </androidx.cardview.widget.CardView>

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Session Continued"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/premium_text_primary"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp" />

    <!-- Message -->
    <TextView
        android:id="@+id/continue_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You may continue using your locker.\nYour time has been extended safely."
        android:textSize="16sp"
        android:textColor="@color/premium_text_secondary"
        android:lineSpacingExtra="4dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Remaining Time -->
    <TextView
        android:id="@+id/remaining_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remaining Time: 4h 30m"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/premium_warning_text"
        android:background="@drawable/rounded_text_background_yellow"
        android:padding="12dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:layout_gravity="center" />

    <!-- OK Button -->
    <androidx.cardview.widget.CardView
        android:id="@+id/btn_continue_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="24dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@color/premium_success"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continue Safe! 🔐"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:paddingHorizontal="32dp"
            android:paddingVertical="12dp" />

    </androidx.cardview.widget.CardView>

</LinearLayout>