<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header with Back Button -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_arrow_back"
                android:background="@drawable/circle_white_bg"
                android:padding="8dp"
                android:tint="#6366F1"
                android:clickable="true"
                android:focusable="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Face Registration"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:layout_centerInParent="true" />

        </RelativeLayout>

        <!-- Welcome Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="40dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:cardCornerRadius="60dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#6366F1"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_face_scan"
                    android:tint="@android:color/white"
                    android:layout_gravity="center" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Up Face Recognition"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:textAlignment="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick and secure access to your account"
                android:textSize="16sp"
                android:textColor="#6B7280"
                android:textAlignment="center" />

        </LinearLayout>

        <!-- User Selection Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardUserSelection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="24dp"
                        android:background="#6366F1"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Step 1: Select User"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1F2937" />

                </LinearLayout>

                <Button
                    android:id="@+id/btnSelectUser"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Choose User Account"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:background="@drawable/button_gradient_primary"
                    android:drawableStart="@drawable/ic_person_outline"
                    android:drawableTint="@android:color/white"
                    android:drawablePadding="12dp"
                    android:gravity="center"
                    android:layout_marginBottom="12dp"
                    android:elevation="2dp" />

                <LinearLayout
                    android:id="@+id/layoutSelectedUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/selected_user_bg"
                    android:padding="16dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_check_circle"
                        android:tint="#10B981"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/tvSelectedUser"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="John Doe Selected"
                        android:textSize="16sp"
                        android:textColor="#10B981"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Face Capture Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardFaceCapture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="24dp"
                        android:background="#6366F1"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Step 2: Capture Your Face"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1F2937" />

                </LinearLayout>



                <!-- Capture Button -->
                <Button
                    android:id="@+id/btnCaptureFace"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="Start Face Scan"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:background="@drawable/button_gradient_success"
                    android:drawableStart="@drawable/ic_camera_alt"
                    android:drawableTint="@android:color/white"
                    android:drawablePadding="16dp"
                    android:gravity="center"
                    android:elevation="4dp" />



            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Success Section -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/successCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@android:color/white"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_check_circle_large"
                    android:tint="#10B981"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perfect!"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your face has been captured successfully.\nReady to register?"
                    android:textSize="16sp"
                    android:textColor="#6B7280"
                    android:textAlignment="center"
                    android:layout_marginBottom="24dp"
                    android:lineSpacingExtra="4dp" />

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnTryAgain"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_weight="1"
                        android:text="Try Again"
                        android:textColor="#6B7280"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:background="@drawable/button_outline_gray"
                        android:layout_marginEnd="12dp" />

                    <Button
                        android:id="@+id/btnRegisterFace"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_weight="1"
                        android:text="Register Face"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:background="@drawable/button_gradient_success"
                        android:layout_marginStart="12dp"
                        android:elevation="2dp" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Quick Tips -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#F0F9FF"
            app:strokeColor="#3B82F6"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="top">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_lightbulb"
                    android:tint="#3B82F6"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="4dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quick Tips"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1E40AF"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Ensure good lighting on your face\n• Keep your face centered in the frame\n• Remove glasses or accessories if needed\n• Stay still during the scanning process"
                        android:textSize="14sp"
                        android:textColor="#1E40AF"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>