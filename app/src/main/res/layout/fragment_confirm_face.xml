<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@drawable/gradient_background">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_check_circle_large"
        android:tint="#10B981"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Face Captured!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#1F2937"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ready to register John Doeâ€™s face?"
        android:textSize="16sp"
        android:textColor="#6B7280"
        android:textAlignment="center"
        android:layout_marginBottom="32dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnTryAgain"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Try Again"
            android:textColor="#6B7280"
            android:background="@drawable/button_outline_gray" />

        <Button
            android:id="@+id/btnRegisterFace"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Register Face"
            android:textColor="@android:color/white"
            android:background="@drawable/button_gradient_success"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_arrow_back"
        android:background="@drawable/circle_white_bg"
        android:padding="8dp"
        android:tint="#6366F1"
        android:layout_gravity="start"
        android:layout_marginTop="32dp"
        android:clickable="true"
        android:focusable="true" />
</LinearLayout>