<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QuickStorePhilippines" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. Often used for the top ActionBar/Toolbar -->
        <!-- Changed from purple to your primary blue -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/primary_color</item>
        <item name="colorSecondaryVariant">@color/primary_dark</item>
        <item name="colorOnSecondary">@color/white</item>


        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>



        <item name="android:colorBackground">@color/background_color</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnBackground">@color/black</item>

        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>



        <item name="materialButtonStyle">@style/CustomMaterialButton</item>
        <item name="materialButtonOutlinedStyle">@style/CustomOutlinedButton</item>
    </style>

    <!-- Variations -->
    <style name="Theme.QuickStorePhilippines.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.QuickStorePhilippines.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <!-- Changed to Light to match the text color on primary (usually light text on dark primary) -->
    <style name="Theme.QuickStorePhilippines.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Custom Button Styles -->
    <style name="CustomMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

</resources>